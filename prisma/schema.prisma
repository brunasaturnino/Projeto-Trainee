generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/database.db"
}

model Usuarios {
  id         Int @id @default(autoincrement())
  email      String @unique
  nome       String 
  senha      String
  foto       String? // ? represnta opcional
  privilegio Boolean
}

model Artistas {
  id         Int @id @default(autoincrement())
  nome       String 
  foto       String
  streams    Int
  musicas Musicas[]
}


model Musicas {
  id           Int @id @default(autoincrement())
  nome         String 
  genero       String
  album        String
  artistas     Artistas @relation(fields: [artistasId], references: [id])
  artistasId    Int
}