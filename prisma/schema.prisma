generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Users {
  id         Int @id @default(autoincrement())
  email      String @unique
  name      String 
  password      String
  photo       String? // ? representa opcional
  privileges Boolean
  musics    Musicas[] 
}

model Artists {
  id               Int      @id @default(autoincrement())
  name             String
  photo             String?
  streams          Int      @default(0)
  musics          Musicas[]
}

model Musicas {
  id        Int      @id @default(autoincrement())
  name      String
  genre    String
  album     String
  artistId Int
  artist   Artists  @relation(fields: [artistId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user   Users[]
}