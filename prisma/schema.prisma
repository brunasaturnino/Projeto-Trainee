generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/database.db"
}

model Usuarios {
  id         Int @id @default(autoincrement())
  email      String @unique
  nome       String 
  senha      String
  foto       String? // ? representa opcional
  privilegio Boolean
  musicas    Musicas[]
}

model Artistas {
  id               Int      @id @default(autoincrement())
  nome             String
  foto             String?
  numeroDeStreams  Int      @default(0)
  musicas    Musicas[]
}



model Musicas {
  id        Int      @id @default(autoincrement())
  nome      String
  genero    String
  album     String
  artistaId Int
  usuarioId Int
  artista   Artistas  @relation(fields: [artistaId], references: [id])
  usuario   Usuarios  @relation(fields: [usuarioId], references: [id])
}